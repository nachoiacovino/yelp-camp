<% include ../partials/header %>

<h1 class="text-center my-4">
	Edit this Campground
</h1>


<div class="container w-50">
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  		<div class="form-group">
			<input type="text" class="form-control" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
  		</div>
		<div class="form-group">
			<textarea rows="5" class="form-control" name="campground[description]" placeholder="Description"><%= campground.description %></textarea>
  		</div>
		<input type="submit" class="btn btn-primary btn-lg btn-block" value="Edit Campground">
	</form>
	<br />
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>