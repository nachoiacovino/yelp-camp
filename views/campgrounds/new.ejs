<% include ../partials/header %>

<h1 class="text-center my-4">
	Create a new Campground
</h1>


<div class="container w-50">
	<form action="/campgrounds" method="POST">
  		<div class="form-group">
			<input type="text" class="form-control" name="name" placeholder="Name">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="image" placeholder="Image URL">
  		</div>
		<div class="form-group">
			<textarea rows="5" class="form-control" name="description" placeholder="Description"></textarea>
  		</div>
		<input type="submit" class="btn btn-primary btn-lg btn-block" value="Add New Campground">
	</form>
	<br />
	<a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>