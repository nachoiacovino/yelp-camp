<% include ../partials/header %>

<div class="container">
        <div class="row mt-4">
            <div class="col-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-9">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>">
                    <div class="card-body">
                        <h5 class="float-right">
                            $9.00/night
                        </h5>
                        <h5 class="card-title">
                            <%= campground.name %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                    </div>
                </div>
                <div class="card my-4 bg-light">
					<div class="card-body">
						<a href="/campgrounds/<%= campground._id %>/comments/new" class="float-right btn btn-primary">Leave a review</a>
						<h3 class="card-title">
							Reviews
						</h3>
						<hr>
						<% for (comment of campground.comments) { %>
							<p class="card-text float-right">10 days ago</p>
							<p class="card-text"><strong><%= comment.author %></strong></p>
							<p class="card-text-"><%= comment.text %></p>
							<hr>
						<% } %>
					</div>
                </div>
            </div>
        </div>
    </div>


<% include ../partials/footer %>