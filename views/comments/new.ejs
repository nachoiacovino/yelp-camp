<% include ../partials/header %>

<h1 class="text-center my-4">
	Add new comment to <%= campground.name %>
</h1>


<div class="container w-50">
	<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
  		<div class="form-group">
			<input type="text" class="form-control" name="comment[author]" placeholder="Author">
		</div>
		<div class="form-group">
			<textarea rows="3" class="form-control" name="comment[text]" placeholder="Your comment here"></textarea>
  		</div>
		<input type="submit" class="btn btn-primary btn-lg btn-block" value="Add Comment">
	</form>
	<br />
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>